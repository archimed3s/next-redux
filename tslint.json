{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "indent": [
      true,
      "tabs",
      4
    ],
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-console": [
      true,
      "log"
    ],
    "max-line-length": false,
    "one-variable-per-declaration": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  },
  "rules": {
    "indent": [
      true,
      "tabs",
      4
    ],
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-console": [
      true,
      "log"
    ],
    "max-line-length": false,
    "one-variable-per-declaration": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  },
  "linterOptions": {
    "exclude": [
      "dist/**/*",
      "node_modules/**/*",
      "src/client/static/coverage/**/*",
      "src/client/static/docs/**/*"
    ]
  }
}